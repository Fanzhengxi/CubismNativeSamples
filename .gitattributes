# Auto detect text files and perform LF normalization
*                   text=auto

# Explicitly declare files as LF
*.md                text eol=lf
*.txt               text eol=lf
*.json              text eol=lf
*.xml               text eol=lf
*.cpp               text eol=lf
*.hpp               text eol=lf
*.h                 text eol=lf
*.pch               text eol=lf
*.rc                text eol=lf
*.sh                text eol=lf
*.java              text eol=lf
*.gradle            text eol=lf
*.properties        text eol=lf
*.pro               text eol=lf
*.mk                text eol=lf
*.pbxproj           text eol=lf
*.mm                text eol=lf
*.m                 text eol=lf
*.plist             text eol=lf
gradlew             text eol=lf
.editorconfig       text eol=lf
.gitattributes      text eol=lf
*.gitignore         text eol=lf
.gitmodules         text eol=lf

# Explicitly declare files as CRLF
*.bat               text eol=crlf diff=sjis
*.sln               text eol=crlf
*.vcxproj           text eol=crlf
*.vcxproj.filters   text eol=crlf

# Library and media files as binary
*.moc3              binary
*.icns              binary
*.ico               binary
*.jpg               binary
*.png               binary
*.mp4               binary
*.ttf               binary
*.jar               binary
*.a                 binary
*.bc                binary
*.bundle            binary
*.dll               binary
*.lib               binary
*.so                binary
